<?xml version="1.0" encoding="utf-8"?>
<!-- @Version $Id: mod_wow_guild_members.xml 1 2011-11-29 19:34:34Z bRunO $ -->
<install type="module" version="1.5.0" client="site" method="upgrade">
	<name>WoW Guild Members</name>
	<author>Branko Wilhelm</author>
	<creationDate>Mar 2012</creationDate>
	<copyright>(C) 2012 Branko Wilhelm</copyright>
	<license>http://www.gnu.org/licenses/gpl.html GNU/GPL version 3</license>
	<authorEmail>bw@z-index.net</authorEmail>
	<authorUrl>www.z-index.net</authorUrl>
	<version>@SVN_REVISION@</version>
	<description>Display latest WoW Armory Guild News</description>
	<files>
		<filename module="mod_wow_guild_members">mod_wow_guild_members.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="lang">
		<language tag="en-GB">en-GB.mod_wow_guild_members.ini</language>
		<language tag="de-DE">de-DE.mod_wow_guild_members.ini</language>
	</languages>
	<!-- Joomla! 1.6+ -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="guild" type="text" default="" size="30" required="true" label="MOD_WOW_GUILD_MEMBERSS_GUILD_LABEL" description="MOD_WOW_GUILD_MEMBERSS_GUILD_DESC" />
				<field name="realm" type="text" default="" size="30" required="true" label="MOD_WOW_GUILD_MEMBERSS_REALM_LABEL" description="MOD_WOW_GUILD_MEMBERSS_REALM_DESC" />
				<field name="lang" type="text" default="en" size="30" required="true" label="MOD_WOW_GUILD_MEMBERSS_LANG_LABEL" description="MOD_WOW_GUILD_MEMBERSS_LANG_DESC" />
				<field name="region" type="text" default="us" size="30" required="true" label="MOD_WOW_GUILD_MEMBERSS_REGION_LABEL" description="MOD_WOW_GUILD_MEMBERSS_REGION_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache_time" type="text" filter="integer" default="15" size="5" required="true" label="MOD_WOW_GUILD_MEMBERSS_CACHE_LABEL" description="MOD_WOW_GUILD_MEMBERSS_CACHE_DESC" />
				<field name="timeout" type="text" filter="integer" default="10" size="5" required="true" label="MOD_WOW_GUILD_MEMBERSS_TIMEOUT_LABEL" description="MOD_WOW_GUILD_MEMBERSS_TIMEOUT_DESC" />
			</fieldset>
		</fields>
	</config>
	<!-- Joomla! 1.5 -->
	<params>
		<param name="guild" type="text" default="" size="30" label="MOD_WOW_GUILD_MEMBERSS_GUILD_LABEL" description="MOD_WOW_GUILD_MEMBERSS_GUILD_DESC" />
		<param name="realm" type="text" default="" size="30" label="MOD_WOW_GUILD_MEMBERSS_REALM_LABEL" description="MOD_WOW_GUILD_MEMBERSS_REALM_DESC" />
		<param name="lang" type="text" default="en" size="30" label="MOD_WOW_GUILD_MEMBERSS_LANG_LABEL" description="MOD_WOW_GUILD_MEMBERSS_LANG_DESC" />
		<param name="region" type="text" default="us" size="30" label="MOD_WOW_GUILD_MEMBERSS_REGION_LABEL" description="MOD_WOW_GUILD_MEMBERSS_REGION_DESC" />
	</params>
	<params group="advanced">
		<param name="moduleclass_sfx" type="text" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="cache_time" type="text" default="15" size="5" label="MOD_WOW_GUILD_MEMBERSS_CACHE_LABEL" description="MOD_WOW_GUILD_MEMBERSS_CACHE_DESC" />
		<param name="timeout" type="text" default="10" size="5" label="MOD_WOW_GUILD_MEMBERSS_TIMEOUT_LABEL" description="MOD_WOW_GUILD_MEMBERSS_TIMEOUT_DESC" />
	</params>
	<updateservers>
		<server type="extension" priority="1" name="WoW Guild Members">http://www.z-index.net/joomla/wow-guild-members/updatestream/?view=xml</server>
	</updateservers>
</install>
